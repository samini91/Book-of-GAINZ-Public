<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1"
    >

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/selectexercsieconfigurationId"
        android:clickable="true"
        android:layout_weight=".5"
        >

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/FilterSelector"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>

        <co.moonmonkeylabs.realmsearchview.RealmSearchView
            android:id="@+id/FilterableList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/FilterSelector"/>

    </RelativeLayout>

    <com.example.sadiq.test.SetRepWeightConfigurationView.SetRepWeightConfigurationView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight=".5"
        />

</LinearLayout>