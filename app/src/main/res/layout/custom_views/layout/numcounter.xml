<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:autofit="http://schemas.android.com/apk/res-auto">

    <me.grantland.widget.AutofitLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/valueSelector_text"
        autofit:minTextSize="30sp"
        android:singleLine="true"
        android:gravity="center"
        android:maxLines="4"
        >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/valueSelector_margin_top"

            android:text="0"

            android:enabled="false"
            android:background="@null"
            android:textColor="#000056"

            android:id="@+id/valueTextView"
            />

    </me.grantland.widget.AutofitLayout>

    <TextView
        android:id="@+id/valueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/valueSelector_label_text"
        android:text="SETS"
        android:layout_below="@+id/valueTextView"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:src="@android:drawable/ic_input_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minusButton"
        android:clickable="true"
        android:layout_alignParentTop="true"

        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/valueTextView"
        />

    <ImageButton
        android:src="@android:drawable/ic_input_add"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/plusButton"
        android:clickable="true"

        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/valueTextView"

        />

</merge>
